<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD5D5D"
    tools:context=".PopUp">

    <Button
        android:id="@+id/exit"
        android:layout_width="167dp"
        android:layout_height="85dp"
        android:onClick="close"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/level" />

    <EditText
        android:id="@+id/molesHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Score: "
        app:layout_constraintBottom_toTopOf="@+id/streak"
        app:layout_constraintStart_toStartOf="@+id/mazeCompleted"
        app:layout_constraintTop_toBottomOf="@+id/mazeCompleted" />

    <EditText
        android:id="@+id/mazeCompleted"
        android:layout_width="254dp"
        android:layout_height="47dp"
        android:layout_marginStart="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/molesHit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintStart_toStartOf="@+id/molesHit"
        app:layout_constraintTop_toBottomOf="@+id/molesHit" />

    <EditText
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintStart_toStartOf="@+id/streak"
        app:layout_constraintTop_toBottomOf="@+id/streak" />

</androidx.constraintlayout.widget.ConstraintLayout>